<%= turbo_frame_tag "cart" do %>
    <p class="m-3"><%= image_tag("basket-fill.svg", size: "30x30") %> </p>
    <% if @cart.items.count > 0 %>
        <table class="table table-hover">
        <thead class="table-light">
            <tr>
                <th>Наименование</th>
                <th>Цена</th>
                <th>Изменить количество</th>
                <th>Удалить товар</th>
                <th>Стоимость</th>
            </tr>
        </thead>
        <%= render "cart/items" %>
        </table>
        <p class="m-3"><strong>Итого: </strong><%= @cart.total%> </p>
        <% else %>
        <p class="m-3">Корзина пуста</p>
    <% end %>
<% end %>